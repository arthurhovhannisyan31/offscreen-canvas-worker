{
  "name": "offscreen-canvas-worker",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "yarn@4.5.0",
  "engines": {
    "node": "^20.12.2"
  },
  "scripts": {
    "dev": "yarn vite-base",
    "build": "yarn check-ts && yarn vite-base build",
    "preview": "yarn vite-base preview",
    "check-lint": "yarn eslint --ext .ts,.tsx,.js src/",
    "check-lint-staged": "bash configs/scripts/lint-staged",
    "format": "yarn lint --fix",
    "jest-base": "node --expose-gc ./node_modules/jest/bin/jest.js",
    "test": "yarn jest-base --silent --coverage --maxWorkers=4 --no-cache --logHeapUsage",
    "test-staged": "yarn jest-base --notify --onlyChanged",
    "check-ts": "yarn tsc -p tsconfig.json --noEmit",
    "prepare": "./configs/scripts/setup",
    "setup": "git config core.hooksPath .git-hooks",
    "postinstall": "yarn prepare",
    "vite-base": "vite --config ./configs/vite/vite.config.ts"
  },
  "dependencies": {
    "mobx": "^6.13.1",
    "mobx-react-lite": "^4.0.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.3",
    "@testing-library/dom": "^9.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vitejs/plugin-basic-ssl": "^1.0.1",
    "@vitejs/plugin-react": "^3.1.0",
    "clsx": "^1.2.1",
    "eslint": "^8.36.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-css-modules": "^2.11.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "git-conventional-commits": "^2.6.3",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.4.1",
    "jest-extended": "^3.2.3",
    "node-notifier": "^10.0.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "vite": "^5.3.4",
    "vite-plugin-html-config": "^1.0.11",
    "vite-tsconfig-paths": "^4.0.7"
  }
}
