{
  "extends": "./configs/ts-config/tsconfig.rules.json",
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": ".",
    "target": "ESNext",
    "typeRoots": ["./src/typings"],
  },
  "include": ["src", "configs/**/*", "temp"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
